{
  "info": {
    "name": "Simple Backend Tests (Intentional Fail)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "GET Hello",
      "request": {
        "method": "GET",
        "url": "http://localhost:3000/api/hello"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Test này vẫn đúng",
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "POST Sum (GÂY LỖI)",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{ \"a\": 5, \"b\": 7 }",
          "options": { "raw": { "language": "json" } }
        },
        "url": "http://localhost:3000/api/sum"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Thực tế: 5 + 7 = 12",
              "// Test sai: Mong đợi là 100",
              "pm.test('Sum calculation check', () => pm.expect(pm.response.json().result).to.eql(100));"
            ]
          }
        }
      ]
    },
    {
      "name": "POST Multiply (GÂY LỖI)",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{ \"a\": 10, \"b\": 3 }",
          "options": { "raw": { "language": "json" } }
        },
        "url": "http://localhost:3000/api/multiply"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
               "// Thực tế: 10 * 3 = 30",
               "// Test sai: Mong đợi là 9999",
              "pm.test('Multiply calculation check', () => pm.expect(pm.response.json().result).to.eql(9999));"
            ]
          }
        }
      ]
    },
    {
      "name": "Get User - Valid ID",
      "request": { "method": "GET", "url": "http://localhost:3000/api/user/5" },
      "event": [ { "listen": "test", "script": { "exec": [ "pm.test('Status is 200', () => pm.response.to.have.status(200));" ] } } ]
    }
  ]
}